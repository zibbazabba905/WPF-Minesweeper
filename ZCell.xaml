<UserControl x:Class="Sweeper04.ZCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sweeper04"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button 
        x:Name="CellButton" 
        Width="20"
        Height="20"
        Content="{Binding Path=CellLabel}" 
        Click="CellButton_Click"
        PreviewMouseDown="CellButton_MouseDown"
        PreviewMouseUp="CellButton_PreviewMouseUp"
        MouseRightButtonDown="CellButton_MouseRightButtonDown"
        MouseRightButtonUp="CellButton_MouseRightButtonUp"/>
</UserControl>
